{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default capabilities for MdReader",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**" }]
    },
    "fs:allow-exists",
    "shell:allow-open"
  ]
}
