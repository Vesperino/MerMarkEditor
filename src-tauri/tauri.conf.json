{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MerMark Editor",
  "version": "0.1.8",
  "identifier": "com.mermark.editor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MerMark Editor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US", "pl-PL"]
      },
      "nsis": {
        "languages": ["English", "Polish"],
        "displayLanguageSelector": true
      }
    },
    "category": "Productivity",
    "shortDescription": "Modern Markdown editor with Mermaid diagrams",
    "longDescription": "MerMark Editor is a modern, open-source Markdown editor with built-in Mermaid diagram support. Create beautiful documents with flowcharts, sequence diagrams, and more.",
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "description": "Markdown text file",
        "role": "Editor",
        "mimeType": "text/markdown"
      }
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM1QTREMTM3MTA1NTIwQjAKUldTd0lGVVFOOUdreFlaYTRYREh2dDduRzNyc0todysxblNXanlCTkJ6blZ3cFdueXdZNTBFY1kK",
      "endpoints": [
        "https://github.com/Vesperino/MerMarkEditor/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["mermark"]
      }
    }
  }
}
